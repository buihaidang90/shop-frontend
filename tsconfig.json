{
  // "files": [],
  "references": [
    // { "path": "./tsconfig.node.json" },
    // { "path": "./tsconfig.app.json" }
  ],
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "composite": true,
    "noEmit": true,
    // "strict": false,
    // "allowJs": true,

    "module": "ESNext",
    "moduleResolution": "Bundler", // ko yêu cầu phần mở rộng tệp (extension) trên đường dẫn tương đối khi import
    "types": ["node"],
    "target": "ESNext",
    "lib": ["ESNext", "ES2022", "DOM"], // , "ES2015"
  }
}